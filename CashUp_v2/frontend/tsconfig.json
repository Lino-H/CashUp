{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/__tests__",
    "src/pages/__tests__",
    "src/components/__tests__",
    "src/services/__tests__",
    "src/utils/__tests__",
    "src/hooks/__tests__",
    "src/setupTests.ts",
    "src/components/StrategyAutomation.tsx",
    "src/components/SentimentAnalysis.tsx",
    "src/pages/NetworkOptimizationDemo.tsx",
    "src/pages/RealTimeTradingWebSocket.tsx"
  ]
}