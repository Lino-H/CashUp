# 数据库配置
DATABASE_URL=postgresql+asyncpg://trading_user:trading_pass@localhost:5432/trading_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 应用配置
DEBUG=true
ENVIRONMENT=development
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
API_V1_PREFIX=/api/v1
PROJECT_NAME=CashUp Trading Service
PROJECT_VERSION=1.0.0

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# 缓存配置
CACHE_TTL=300
CACHE_PREFIX=trading_service
CACHE_ENABLED=true

# 外部服务配置
USER_SERVICE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8002
MARKET_DATA_SERVICE_URL=http://localhost:8003

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 文件上传配置
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf"]
UPLOAD_DIR=./uploads

# 邮件配置（如果需要）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# 消息队列配置（如果需要）
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 时区配置
TIMEZONE=UTC
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 交易配置
DEFAULT_TRADING_FEE=0.001
MIN_ORDER_AMOUNT=0.001
MAX_ORDER_AMOUNT=1000000
DEFAULT_LEVERAGE=1
MAX_LEVERAGE=100

# 风险控制配置
RISK_CHECK_ENABLED=true
MAX_POSITION_SIZE=1000000
MAX_DAILY_LOSS=10000
MAX_DRAWDOWN=0.2

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups