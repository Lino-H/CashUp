# CashUp配置管理服务环境变量配置示例

# 应用配置
APP_NAME=CashUp Config Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# 服务配置
HOST=0.0.0.0
PORT=8003
WORKERS=1
RELOAD=true

# 数据库配置
DATABASE_URL=postgresql+asyncpg://cashup:cashup123@localhost:5432/cashup_config
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis配置
REDIS_URL=redis://localhost:6379/3
REDIS_MAX_CONNECTIONS=100
REDIS_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# JWT认证配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# 信任的主机
TRUSTED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# 外部服务URL
USER_SERVICE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8002
MONITORING_SERVICE_URL=http://localhost:8004

# 配置管理设置
CONFIG_CACHE_TTL=3600
CONFIG_MAX_VERSIONS=10
CONFIG_BACKUP_ENABLED=true
CONFIG_AUDIT_ENABLED=true

# 支持的配置类型
SUPPORTED_CONFIG_TYPES=["system", "user", "strategy", "trading", "risk", "notification", "api", "database", "cache", "security", "monitoring", "custom"]

# 模板配置
TEMPLATE_CACHE_TTL=7200
TEMPLATE_MAX_SIZE=1048576

# 权限配置
DEFAULT_USER_PERMISSIONS=["config:read", "template:read"]
ADMIN_PERMISSIONS=["config:admin", "template:admin", "system:admin", "audit:read"]

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 热更新配置
HOT_RELOAD_ENABLED=true
HOT_RELOAD_INTERVAL=10

# 同步配置
SYNC_ENABLED=true
SYNC_INTERVAL=60
SYNC_BATCH_SIZE=100

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/tmp/config-uploads

# 安全配置
ENCRYPTION_KEY=your-encryption-key-32-characters
PASSWORD_SALT=your-password-salt

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 开发配置（仅开发环境）
DEV_AUTO_RELOAD=true
DEV_SHOW_DOCS=true
DEV_ENABLE_PROFILER=false